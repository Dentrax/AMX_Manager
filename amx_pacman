#!/bin/sh

main() {
    case "$1" in
      install)
         sudo pacman -S
         ;;
      update)
         sudo pacman -Syu
         ;;
     *)                                                                                               printf "volume <command>\n"
         printf "          up \n"
         printf "         down\n"
    esac
}
                                                                                                                    
main "$@"
