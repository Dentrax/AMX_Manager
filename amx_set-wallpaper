#!/bin/bash

main() {

    case "$1" in
        default)
            feh --bg-fill ~/Pictures/Wallpapers/wp1.jpg
            notify-send -a 'AMX_Wallpaper' 'Wallpaper changed to default'
            ;;
        random)
            feh --randomize --bg-fill ~/Pictures/Wallpapers/*
            notify-send -a 'AMX_Wallpaper' 'Wallpaper changed to random'
            ;;

        *)
            printf "wallpaper <command>\n"
            printf "         default \n"
            printf "         random\n"

        esac
}

main "$@"
